                            small.form-text Example format: #[em 0900 CST]
                            input.form-control(name="tuesday_open", type="text")

                        .form-group
                            label(for="tuesday_closed") #[strong Closes]
                            small.form-text Example format: #[em 2300 CST]
                            input.form-control(name="tuesday_closed", type="text")

                        hr

                        h4 Wednesday Hours

                        .form-group
                            label(for="wednesday_open") #[strong Opens]
                            small.form-text Example format: #[em 0900 CST]
                            input.form-control(name="wednesday_open", type="text")

                        .form-group
                            label(for="wednesday_closed") #[strong Closes]
                            small.form-text Example format: #[em 2300 CST]
                            input.form-control(name="wednesday_closed", type="text")

                        hr

                        h4 Thursday Hours

                        .form-group
                            label(for="thursday_open") #[strong Opens]
                            small.form-text Example format: #[em 0900 CST]
                            input.form-control(name="thursday_open", type="text")

                        .form-group
                            label(for="thursday_closed") #[strong Closes]
                            small.form-text Example format: #[em 2300 CST]
                            input.form-control(name="thursday_closed", type="text")

                        hr

                        h4 Friday Hours

                        .form-group
                            label(for="friday_open") #[strong Opens]
                            small.form-text Example format: #[em 0900 CST]
                            input.form-control(name="friday_open", type="text")

                        .form-group
                            label(for="friday_closed") #[strong Closes]
                            small.form-text Example format: #[em 2300 CST]
                            input.form-control(name="friday_closed", type="text")

                        hr

                        h4 Saturday Hours

                        .form-group
                            label(for="saturday_open") #[strong Opens]
                            .form-text Example format: #[em 0900 CST]
                            input.form-control(name="saturday_open", type="text")

                        .form-group
                            label(for="saturday_closed") #[strong Closes]
                            .form-text Example format: #[em 2300 CST]
                            input.form-control(name="saturday_closed", type="text")

                        .form-group
                            button.btn.btn-primary(type="submit") Save Interest

                    <!-- Coordinates -->
                    //- .tab-pane.fade#contact(role="tabpanel", aria-labelledby="contact-tab")
                    //-     .form-group
                    //-         label(for="google-latitude") #[strong Latitude]
                    //-         input.form-control(name="latitude", type="text")

                    //-     .form-group
                    //-         label(for="google-longitude") #[strong Longitude]
                    //-         input.form-control(name="longitude", type="text")

                    //-     .form-group
                    //-         button.btn.btn-primary(type="submit") Save Interest

                    .tab-pane.fade#image(role="tabpanel", aria-labelledby="image-tab")
                        h4 Español
                        //- .form-group
                        //-     label(for="espanol-name") #[strong Name]
                        //-     input.form-control(name="espanol_name", type="text")

                        <!-- SHORT DESCRIPTION -->
                        .form-group
                            label(for="espanol_short_description") #[strong Short Description]
                            .form-text Write 3-5 sentences about this interest.

                            textarea.form-control#espanol_short_description(name="espanol_short_description", rows="10")

                        <!-- LONG DESCRIPTION -->
                        .form-group
                            label(for="espanol_long_description") #[strong Long Description]
                            .form-text Write in detail about this interest.

                            textarea.form-control#espanol_long_description(name="espanol_long_description", rows="10")

                        .form-group
                            button.btn.btn-primary(type="submit") Save Interest
