extends ../../layout.pug

block panel
    form.content-wrapper(method="post", action="/interest/submit")
        .page-header
            h2.page-title THINGS TO DO / #[span Add New Interest]
        .row
            .col#interest_add
                ul.nav.nav-tabs#myTab(role="tablist")
                    li.nav-item
                        a.nav-link.active#home-tab(data-toggle="tab", href="#home", role="tab", aria-controls="home", aria-selected="true") Options
                    li.nav-item
                        a.nav-link#profile-tab(data-toggle="tab", href="#profile", role="tab", aria-controls="profile", aria-selected="false") Hours of Operation
                    //- li.nav-item
                    //-     a.nav-link#contact-tab(data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false") Coordinates
                    li.nav-item
                        a.nav-link#image-tab(data-toggle="tab" href="#image" role="tab" aria-controls="image" aria-selected="false") Extra Languages

                .tab-content#myTabContent

                    <!-- OPTIONS -->
                    .tab-pane.fade.show.active#home(role="tabpanel" aria-labelledby="home-tab")

                        .form-group
                            label(for="name") Name

                            input.form-control(name="name",type="text")

                        <!-- INTEREST TYPE -->
                        .form-group
                            label(for="interest_type") #[strong Interest Type]
                            small.form-text What type of place is this interest?

                            div.input-group
                                select#interest_type.custom-select(name="interest_type")
                                    option(value="Attractions") Attractions
                                    option(value="Events") Events
                                    option(value="Restaurants") Restaurants
                                    option(value="Shopping") Shopping
                                    option(value="Nature") Nature &amp; Parks
                                    option(value="Concerts") Concerts
                                    option(value="Landmarks") Landmarks
                                    option(value="Transportation") Transportation
                                    option(value="Museums") Museums

                        <!-- DESTINATION -->
                        .form-group
                            label(for="destination") #[strong Destination]
                            small.form-text Where is this interest located?

                            div.input-group
                                select#destination.custom-select(name="destination")
                                    option(value="ANAHEIM") ANAHEIM
                                    option(value="BRANSON") BRANSON
                                    option(value="CANCUN") CANCUN
                                    option(value="COCOA BEACH") COCOA BEACH
                                    option(value="DAYTONA BEACH") DAYTONA BEACH
                                    option(value="GATLINBURG") GATLINBURG
                                    option(value="HOUSTON") HOUSTON
                                    option(value="LAS VEGAS") LAS VEGAS
                                    option(value="MESA") MESA
                                    option(value="MIAMI") MIAMI
                                    option(value="MYRTLE BEACH") MYRTLE BEACH
                                    option(value="NEW TORK CITY") NEW TORK CITY
                                    option(value="OCOEE") OCOEE
                                    option(value="ORLANDO") ORLANDO
                                    option(value="ORLANDO SOUTH") ORLANDO SOUTH
                                    option(value="PARK CITY") PARK CITY
                                    option(value="PORT CANAVERAL") PORT CANAVERAL
                                    option(value="PORT EVERGLADES") PORT EVERGLADES
                                    option(value="TEST LOCATION") TEST LOCATION
                                    option(value="TUNICA") TUNICA
                                    option(value="WILLIAMSBURG") WILLIAMSBURG
                                    option(value="UNCATERGORIZED") UNCATERGORIZED

                        <!-- ADDRESS -->
                        .form-group
                            label(for="address") #[strong Address]
                            small.form-text Example format: #[em 1600 Amphitheatre Parkway, Mountain View, CA]

                            input#address.form-control(name="address", type="text", required)

                        <!-- SHORT DESCRIPTION -->
                        .form-group
                            label(for="short_description") #[strong Short Description]
                            small.form-text Write 3-5 sentences about this interest.

                            textarea.form-control#short_description(name="short_description", rows="5")

                        <!-- LONG DESCRIPTION -->
                        .form-group
                            label(for="long_description") #[strong Long Description]
                            small.form-text Write in detail about this interest.

                            textarea.form-control#long_description(name="long_description", rows="10")

                        <!-- External Link -->
                        .form-group
                            label(for="external_link") External Link
                            small.form-text Does this interest have a website?

                            input.form-control(name="external_link",type="text")

                        <!-- Yelp ID -->
                        .form-group
                            label(for="yelp_id") #[strong Yelp ID]
                            small.form-text API ID for interest on Yelp.

                            input.form-control(name="yelp_id", type="text")

                        <!-- Yelp Link -->
                        .form-group
                            label(for="yelp_link") #[strong Yelp Link]
                            small.form-text Link to reviews on this place for Yelp

                            input.form-control(name="yelp_link", type="text")

                        <!-- Open Table ID -->
                        .form-group
                            label(for="open_table_id") #[strong Open Table ID]
                            small.form-text API ID for interest on Open Table if interest has a menu.

                            input.form-control(name="open_table_id",type="text")

                        <!-- Open Table Link -->
                        .form-group
                            label(for="open_table_link") #[strong Open Table Link]
                            small.form-text Link to Open Table for this interest

                            input.form-control(name="open_table_link", type="text")

                        <!-- Submit -->
                        .form-group
                            button(type="submit", class="btn btn-primary") Save Interest

                    <!-- HOURS OF OPERATION -->
                    .tab-pane.fade#profile(role="tabpanel", aria-labelledby="profile-tab")
                        <!-- Open All Day? -->
                        .input-group
                            .checkbox
                                label(for="allday")
                                    strong Is this place open all day? #[br]
                                    input#allday(type="checkbox", name="allday[]")
                                    span Open 24 Hours

                        hr

                        h4 Sunday Hours

                        .form-group
                            label(for="sunday_open") #[strong Opens]
                            small.form-text Example format: #[em 0900 CST]
                            input.form-control(name="sunday_open", type="text")

                        .form-group
                            label(for="sunday_closed") #[strong Closes]
                            small.form-text Example format: #[em 2300 CST]
                            input.form-control(name="sunday_closed", type="text")

                        hr

                        h4 Monday Hours

                        .form-group
                            label(for="monday_open") #[strong Opens]
                            small.form-text Example format: #[em 0900 CST]
                            input.form-control(name="monday_open", type="text")

                        .form-group
                            label(for="monday_closed") #[strong Closes]
                            small.form-text Example format: #[em 2300 CST]
                            input.form-control(name="monday_closed", type="text")

                        hr

                        h4 Tuesday Hours

                        .form-group
